<div class="container my-5">
    <h2 class="text-center mb-4">✏️ Edit Your Review</h2>

    <div class="card shadow p-4">
        <form action="/review/<%= review._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="reviewText" class="form-label">Your Review</label>
                <textarea name="review" id="reviewText" class="form-control" rows="4"
                    required><%= review.review %></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/review" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-warning">Update Review</button>
            </div>
        </form>
    </div>
</div>